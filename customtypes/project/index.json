{
  "id": "project",
  "label": "Project",
  "format": "page",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": { "config": { "label": "UID" }, "type": "UID" },
      "title": {
        "type": "StructuredText",
        "config": {
          "label": "Title",
          "placeholder": "",
          "allowTargetBlank": true,
          "single": "paragraph,preformatted,heading1,heading2,heading3,heading4,heading5,heading6,strong,em,hyperlink,image,embed,list-item,o-list-item,rtl"
        }
      },
      "sub_title": {
        "type": "StructuredText",
        "config": {
          "label": "Sub title",
          "placeholder": "",
          "allowTargetBlank": true,
          "single": "paragraph,preformatted,heading1,heading2,heading3,heading4,heading5,heading6,strong,em,hyperlink,image,embed,list-item,o-list-item,rtl"
        }
      },
      "description": {
        "type": "StructuredText",
        "config": {
          "label": "Description (x card piccoline)",
          "placeholder": "",
          "allowTargetBlank": true,
          "single": "paragraph,preformatted,heading1,heading3,heading4,heading5,heading6,strong,em,hyperlink,image,embed,list-item,o-list-item,rtl,heading2"
        }
      },
      "long_text": {
        "type": "StructuredText",
        "config": {
          "label": "Long text (x pagina progetto)",
          "placeholder": "",
          "allowTargetBlank": true,
          "single": "paragraph,preformatted,heading1,heading2,heading3,heading4,heading5,heading6,strong,em,hyperlink,image,embed,list-item,o-list-item,rtl"
        }
      },
      "type": {
        "type": "Select",
        "config": {
          "label": "Type",
          "placeholder": "Tipologia di progetto (di default setta Editorial)",
          "options": ["Editorial", "Digital", "Brand Identity"],
          "default_value": "Editorial"
        }
      },
      "external_image": {
        "type": "Image",
        "config": {
          "label": "External Image",
          "constraint": {},
          "thumbnails": []
        }
      },
      "is_in_homepage": {
        "type": "Boolean",
        "config": {
          "label": "Is In Homepage",
          "default_value": false,
          "placeholder_true": "true",
          "placeholder_false": "false"
        }
      },
      "slices": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": {
          "choices": {
            "double_horizontall_images": { "type": "SharedSlice" },
            "double_vertical_images": { "type": "SharedSlice" },
            "image_full": { "type": "SharedSlice" },
            "video": { "type": "SharedSlice" },
            "project_video": { "type": "SharedSlice" }
          }
        }
      }
    },
    "SEO & Metadata": {
      "meta_description": {
        "config": {
          "label": "Meta Description",
          "placeholder": "A brief summary of the page"
        },
        "type": "Text"
      },
      "meta_image": {
        "config": {
          "constraint": { "height": 1260, "width": 2400 },
          "label": "Meta Image",
          "thumbnails": []
        },
        "type": "Image"
      },
      "meta_title": {
        "config": {
          "label": "Meta Title",
          "placeholder": "A title of the page used for social media and search engines"
        },
        "type": "Text"
      }
    }
  }
}
